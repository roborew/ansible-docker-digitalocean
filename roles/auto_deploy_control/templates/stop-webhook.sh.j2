#!/bin/bash

# Stop Auto-Deployment Webhook Service

set -e

SCRIPT_DIR="{{ auto_deploy_service_dir }}"
PID_FILE="$SCRIPT_DIR/webhook.pid"

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "ðŸ›‘ ${YELLOW}Stopping Auto-Deployment Webhook Service${NC}"

# Check if PID file exists
if [ ! -f "$PID_FILE" ]; then
    echo -e "${YELLOW}Service is not running (no PID file found)${NC}"
    exit 0
fi

# Read PID
PID=$(cat "$PID_FILE")

# Check if process is running
if ! kill -0 "$PID" 2>/dev/null; then
    echo -e "${YELLOW}Service is not running (process not found)${NC}"
    rm -f "$PID_FILE"
    exit 0
fi

# Stop the service
echo "Stopping webhook service (PID: $PID)..."
kill "$PID"

# Wait for process to stop
for i in {1..10}; do
    if ! kill -0 "$PID" 2>/dev/null; then
        echo -e "${GREEN}âœ… Service stopped successfully${NC}"
        rm -f "$PID_FILE"
        exit 0
    fi
    sleep 1
done

# Force kill if still running
echo "Force stopping service..."
kill -9 "$PID" 2>/dev/null || true
rm -f "$PID_FILE"
echo -e "${GREEN}âœ… Service stopped${NC}" 